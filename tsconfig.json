{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "inlineSourceMap": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitReturns": true
  },
  "exclude": [
    "node_modules",
    "tmp",
    "dist"
  ]
}
